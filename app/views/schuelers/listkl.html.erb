<button type="button" class="btn btn-outline-primary">

    <li class="dropdown">
      <a href="#" class="dropdown-toggle black" data-toggle="dropdown">
        Sortieren <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to "Nach Vorname", admin_show_students_vn_path %></li>
        <li><%= link_to "Nach Name", admin_show_students_path %></li>
