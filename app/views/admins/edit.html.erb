<% provide(:title, "Adminliste") %>
<h2>Bearbeiten</h2>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr> <!-- This table lists all relevant entries from the presentation db -->
      <th scope="col">Vorname</th>
      <th scope="col">Name</th>
      <th scope="col">Mail</th>
      <th scope="col">Nummer</th>
      <th scope="col">Speichern</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <%= form_tag admin_show_admins_update_path do %>
        <%= hidden_field_tag 'id', $newadmn.id %>
        <td><%= text_field_tag 'vorname', "#{$newadmn.vorname}" %></td>
        <td><%= text_field_tag 'name', "#{$newadmn.name}" %></td>
        <td><%= text_field_tag 'mail', "#{$newadmn.mail}" %></td>
        <td><%= text_field_tag 'nummer', "#{$newadmn.number}" %></td>
        <td><%= submit_tag "Speichern", class: "btn btn-primary" %></td>
      <% end %>
    </tr>
  </tbody>
</table>
