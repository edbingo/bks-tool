<% provide(:title, "Adminliste") %>
<div align="left">
  <h3>Liste der Administratoren</h3>
</div>
<div align="right">
  <%= link_to "+ HinzufÃ¼gen", admin_new_admin_path, class: "btn btn-primary" %>
</div>
<table class="table table-hover">
  <thead class="thead">
    <tr>
      <th scope="col"><%= sort_link "Vorname" %></th>
      <th scope="col"><%= sort_link "Nachname" %></th>
      <th scope="col"><%= sort_link "Mail" %></th>
      <th scope="col"><%= sort_link "Number" %></th>
      <th scope="col">Bearbeiten</th>
      <th scope="col">Entfernen</th>
    </tr>
  </thead>
  <tbody>
    <% @admn.each do |admn| %>
      <tr>
        <td scope="row"><%= admn.vorname %></td>
        <td scope="row"><%= admn.name %></td>
        <td scope="row"><%= admn.mail %></td>
        <td scope="row"><%= admn.number %></td>
        <td scope="row">
          <%= form_tag admin_show_admins_edit_path do %>
            <%= hidden_field_tag 'id', admn.id %>
            <%= submit_tag "Bearbeiten", class: "btn btn-secondary" %>
          <% end %>
        </td>
        <td scope="row">
          <%= form_tag admin_show_admins_remove_path do %>
            <%= hidden_field_tag 'id', admn.id %>
            <%= submit_tag "Entfernen", class: "btn btn-danger", data: { confirm: "Admin wirklich entfernen?"} %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
