<% provide(:title, "Lehrerliste") %>
<h2>Bearbeiten</h2>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Vorname</th>
      <th>Name</th>
      <th>Mail</th>
      <th>Number</th>
      <th>Speichern</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <%= form_tag admin_show_teachers_update_path do %>
        <%= hidden_field_tag 'id', $newteac.id %>
        <td><%= text_field_tag 'vorname', "#{$newteac.Vorname}" %></td>
        <td><%= text_field_tag 'name', "#{$newteac.Name}" %></td>
        <td><%= text_field_tag 'mail', "#{$newteac.Mail}" %></td>
        <td><%= text_field_tag 'number', "#{$newteac.Number}" %></td>
        <td><%= submit_tag "Speichern", class: "btn btn-primary" %></td>
      <% end %>
    </tr>
  </tbody>
</table>
